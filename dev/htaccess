Options +FollowSymLinks
RewriteEngine on

## the following is a simple 301 redirect to another page
#Redirect 301 /index.php http://peakwebsites.ca/website-services/
Redirect 301 /website-services/website-creation-services.php http://peakwebsites.ca/website-services/
Redirect 301 /about-peak.php http://peakwebsites.ca/about.php
Redirect 301 /peak/faq.php http://peakwebsites.ca/faq.php
Redirect 301 /peak/contact.php http://peakwebsites.ca/contact.php

## 301 redirect www to non-www
RewriteCond %{HTTP_HOST} !^peakwebsites\.ca [NC]
RewriteRule ^(.*)$ http://peakwebsites.ca/$1 [L,R=301]

## resolve homepage variants to open folder
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^/]+/)*(default|index)\.(html|php|htm)\ HTTP/ [NC]
RewriteRule ^(([^/]+/)*)(default|main|index)\.(html|php|htm)$ https://peakwebsites.ca/$1 [L,R=301]

RewriteEngine On
RewriteCond %{HTTPS} on
RewriteRule (.*) http://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

## allows ability to file match types ()
<filesMatch ".(css)$">
FileETag None
Header unset ETag
Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
Header set Pragma "no-cache"
Header set Expires "Wed, 11 Jan 1984 05:00:00 GMT"
</filesMatch>
